generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Consultation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  service   String
  message   String
  status    String   @default("pending") // pending, connected, closed
  createdAt DateTime @default(now())
}

model ProjectOrder {
  id          Int      @id @default(autoincrement())
  productName String
  customerName String
  email       String
  price       String
  createdAt   DateTime @default(now())
}
